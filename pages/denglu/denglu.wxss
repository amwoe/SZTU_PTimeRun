.input-wrapper {
  display: flex;               /* 使用 flex 布局 */
  align-items: center;         /* 垂直居中对齐 */
  position: absolute;          /* 让按钮位置绝对定位 */
  right: 45px;                 /* 距离右边10rpx */
  margin-top: 5px;            /* 使图片向上调整 */

}

.toggle-visibility-btn {
  border: none; /* 去除边框 */
  outline: none; /* 去除点击时的轮廓线 */
  box-shadow: none; /* 去除阴影效果 */
}

.toggle-visibility-btn image {
  width: 18px;                 /* 设置图标的大小 */
  height: 18px;
}

.checkbox-container {
  display: flex;
  align-items: center;
}

.error-message {
  color: red; /* 错误消息显示为红色 */
  font-size: 14px; /* 字体大小 */
  margin-top: 10px; /* 与登录按钮的间距 */
  text-align: center; /* 文本居中显示 */
}
