<view class="flex-col justify-start relative page">
  <image src="/pages/images/2，3，4/背景.png" mode="aspectFill" style="width: 100%; height: 100%;"></image>
  <view class="grid pos_12">
    <block wx:for="{{items}}" wx:for-index="index" wx:key="unique">
      <view class="flex-col items-center grid-item">
        <image class="image_6" src="{{item.imageSrc}}" bindtap="onImageTap" data-index="{{index}}"/>
        <text class="font_2 mt-13">{{item.text}}</text>
      </view>
    </block>
  </view>
</view>