<view class="flex-col justify-start relative page">
  <image src="/pages/images/其他/背景-绿.png" mode="aspectFill" style="width: 100%; height: 100%;"></image>
  <view class="flex-col section_2 pos_8">
    <view class="flex-row justify-between items-center self-stretch group_2">
      <view class="flex-row items-center">
        <image
          class="shrink-0 image_6"
        >{{item.image}}</image>
        <text class="font_2 text_4 ml-13">{{item.name}}</text>
      </view>
      <view class="flex-row items-center group_3">
        <text class="font_3 text_5" bindtap="navigateToContact">联系Ta</text>
        <image
          class="ml-6 shrink-0 image_7"
          src="/pages/images/其他/右.png"
        />
      </view>
    </view>
    <view class="flex-row self-stretch group_4">
      <image
        class="image_8"
        src="/pages/images/9，10，11/2.png"
      />
      <view class="ml-16 flex-col justify-start text-wrapper">
        <text class="font_3 text_6">{{item.task}}</text>
      </view>
    </view>
    <view class="flex-row items-center self-stretch group_5">
      <image
        class="shrink-0 image_9"
        src="/pages/images/9，10，11/3.png"
      />
      <text class="font_4 text_7">任务描述：</text>
      <text class="font_5 text_8">{{item.description}}</text>
    </view>
    <view class="flex-col self-stretch group_6">
      <view class="flex-row items-center self-stretch">
        <image
          class="image_10"
          src="/pages/images/9，10，11/4.png"
        />
        <text class="font_4 text_9">送货地址：</text>
      </view>
      <text class="self-start font_5 text_11 mt-19">{{item.location}}</text>
    </view>
    <view class="flex-row items-center self-stretch group_7">
      <image
        class="image_11"
        src="/pages/images/9，10，11/5.png"
      />
      <text class="font_4 ml-9">送达时间：</text>
      <text class="font_5 text_12 ml-9">{{item.time}}</text>
    </view>
    <view class="flex-row justify-between items-center self-stretch group_8">
      <view class="flex-row items-center">
        <image
          class="shrink-0 image_13"
          src="/pages/images/9，10，11/6.png"
        />
        <text class="ml-6 font_4 text_13">跑腿员要求：</text>
      </view>
      <view class="flex-row items-center group_9">
        <image
          class="shrink-0 image_12"
          src="/pages/images/9，10，11/7.png"
        />
        <text class="font_4 text_16">{{item.gender}}</text>
      </view>
    </view>
    <view class="self-end group_11">
      <text class="text_17">赏金：</text>
      <text class="font_2 text_18">{{item.price}}元</text>
    </view>
  </view>
  <view class="flex-col justify-start items-center text-wrapper_2 pos_9" bindtap="onConfirm">
    <text class="font_2 text_19">确定接单</text>
  </view>
</view>